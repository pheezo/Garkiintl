

<div class="jumbotron">
  <h1>Handcrafted items <br>
    from around the world.
  </h1>
  <h2>Discover one-of-a-kind items</h2>
</div>




  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          
            <%= link_to image_tag(listing.image.url), listing %><br>
          <div class="caption">
           <h3><%= listing.name %></h3><br>
           <p><%= number_to_currency(listing.price) %></p>
           <h3><%= "Sold by: #{listing.user.name}" %></h3>
            
            <% if (user_signed_in?) && (current_user == listing.user) %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %><br>
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
       

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
